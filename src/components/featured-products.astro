---
import ProductCard from "./product-card.astro";

interface Props {
  products: Product[];
}

const { products } = Astro.props;
---

<section class="flex flex-col gap-5 items-center">
  <h3 class="text-2xl">Productos Destacados</h3>

  <div class="w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
    {products.map((product) => <ProductCard product={product} />).slice(0, 4)}
  </div>
</section>
