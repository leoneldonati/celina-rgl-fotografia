---
import { mock } from "@mock";
import ProductCard from "./product-card.astro";
interface Props {
  prodId: string;
}

const { prodId } = Astro.props;

const filtered = mock.filter((prod) => prodId !== prod._id);
---

<section class="overflow-hidden flex flex-col">
  <h3 class="text-2xl">Productos Relacionados</h3>

  <div class="flex overflow-x-scroll">
    {filtered.map((prod) => <ProductCard product={prod} />)}
  </div>
</section>
